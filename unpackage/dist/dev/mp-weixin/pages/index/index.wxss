.content {
  width: 100vm;
  height: 100vh;
  padding-top: 20rpx;
  background-color: #eeeeee;
}
.content .userInfo {
  display: flex;
  width: 90vw;
  height: 140rpx;
  margin: auto;
  border-radius: 25rpx;
  align-items: center;
  background-color: #fff;
}
.content .userInfo .userInfo_userIcon {
  width: 41px;
  height: 41px;
  margin-left: 20rpx;
  border-radius: 5rpx;
}
.content .userInfo .userInfo_userName {
  margin-left: 20rpx;
}
.content .clock {
  width: 90vw;
  margin: 40rpx auto;
  padding: 40rpx 0;
  border-radius: 25rpx;
  background-color: #fff;
}
.content .clock .clock_status {
  display: flex;
  height: 100rpx;
  justify-content: space-around;
}
.content .clock .clock_status .clock_work {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 50vw;
  border-radius: 20rpx;
  background-color: #ededed;
}
.content .clock .clock_status .clock_work .clock_work_bottom {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  color: #757575;
}
.content .clock .clock_status .clock_work .clock_work_bottom .clock_work_img {
  width: 20rpx;
  height: 20rpx;
}
.content .clock .clock_clock {
  display: flex;
  margin: auto;
  margin-top: 50rpx;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(to bottom right, #3f90f9, #266ad6);
  border-radius: 200rpx;
  box-shadow: 0px 10px 21px 0px #cee9ff;
}
.content .clock .clock_clock .clock_clock_title {
  font-size: 24px;
  color: #fff;
}
.content .clock .clock_clock .clock_clock_time {
  color: rgba(255, 255, 255, 0.5);
}
.content .clock .clock_clock_on {
  background: linear-gradient(to bottom right, #b9b9b9, #949494);
  box-shadow: 0px 10px 21px 0px #bebebe;
}

